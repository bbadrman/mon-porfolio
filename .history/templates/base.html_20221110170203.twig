<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Portfolio
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

	</head>
	<body>
		<header>

			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				<a class="navbar-brand" href="{{ path("home") }}">Portfolio</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path("home") }}">Accueil</a>
						</li>
						{% if is_granted("ROLE_USER") %}
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									Gestion
								</a>
								<div class="dropdown-menu" aria-labelledby="navbarDropdown">
									<a class="dropdown-item" href="{{ path("skill_manage") }}">Compétences</a>
									<a class="dropdown-item" href="{{ path("formation_manage") }}">Formations</a>
									<a class="dropdown-item" href="{{ path("reference_manage") }}">Références</a>
								</div>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path("app_logout") }}" tabindex="-1" aria-disabled="true">Déconnexion</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path("app_login") }}" tabindex="-1" aria-disabled="true">Connexion</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</nav>
		</header>
		<main>
			 
				<div style="background-image: url('uploads/badr_chemise.jpg');" id="home-section">
					<div class="container">
						<div class="row align-items-center">

							<div class="col-md-7 mx-auto text-center">
						
								<h2 class="subheading gsap-reveal-hero">Je suis Badr BECHTIOUI, développeur web basé à Rabat-Maroc</h2>
							</div>
							{% block body %}{% endblock %}
						</div>
					</div>
				</div>
			
		</main>
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html></body></html>
